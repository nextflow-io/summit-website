---
import { Image } from "astro:assets";
import Button from "@components/Button";
const { images, title, ctaURL } = Astro.props;
---

<>
  <div class="py-10">
    <div class="container-lg">
      <div class="h1 mb-4">Photo Gallery</div>
      <h1 class="h2 mb-12 text-nextflow">{title}</h1>
      {
        !!ctaURL && (
          <div class="mb-12">
            <Button to={ctaURL} arrowBefore cta>
              {/* See all {images.length} images in Google Photos */}
              View all 170+ images in Google Photos
            </Button>
          </div>
        )
      }
      <div class="flex flex-wrap -mx-2">
        {
          images.map((image, i) => (
            <div class="w-1/2 p-2 md:w-1/3 lg:w-1/4 h-[300px] overflow-hidden">
              <Image
                src={image.default}
                alt=""
                width="600"
                class="object-cover rounded-sm w-full h-full"
              />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</>
