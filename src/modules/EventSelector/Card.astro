---
const { location, btn_txt, btn_url, btn_cta } = Astro.props;
import title_boston from "@images/title_boston-2025.svg";
import title_barcelona from "@images/title_barcelona-2025.svg";
import photo_boston from "./boston.jpg";
import photo_barcelona from "./barcelona.jpg";
const photo = location === "barcelona" ? photo_barcelona : photo_boston;
const title = location === "barcelona" ? title_barcelona : title_boston;
const subtitle = location === "barcelona" ? "In person | Online" : "In person";
const url = location === "barcelona" ? "/2025/barcelona" : "/2025/boston";
import styles from "./styles.module.css";
import Button from "@components/Button";
---

<div class:list={[
  "w-full sm:w-1/2 max-w-[384px] min-h-[200px] bg-brand-1000 my-2 mx-4 rounded-[16px] overflow-hidden text-center flex-auto",
  styles.card,
]}>

  <a href={btn_url && url}>
    <img src={photo.src} class="mb-8" />
    <img src={title.src} class="inline-block" />
    <div class="text-lg py-8 font-semibold">
      <div class="uppercase">{subtitle}</div>
      <div class="mt-3">
        {
          location === "boston" ? (
            <div>May 13â€“16, 2025</div>
          ) : (
            <div class="">October 2025 (dates to be announced)</div>
          )
        }
    </div>
  </a>
  
  {btn_txt && btn_url && (
    <div class="mt-8">
      <Button
        href={btn_url}
        cta={btn_cta}
        arrow
        wide
        small
        className="ml-auto"
      >
            {btn_txt}
      </Button>
    </div>
  )}
</div>
