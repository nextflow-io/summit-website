---
import Layout from "@layouts/Base.astro";
import { CallForAbstracts } from "@components/Marquee";
import NextflowNumbers from "@modules/NextflowNumbers";
import ImageSection from "@modules/ImageSection";
import title from "@images/title_boston-1a.svg";
import Button from "@components/Button";
import LandingHero from "@components/LandingHero";
import KeyInformation from "@modules/KeyInformation";
import KeyDates from "@components/KeyDates/index.astro";
import YouTubeVideo from "@components/YouTubeVideo";
import CTASection from "@modules/CTASection";
import Box, { SubSection } from "@components/Box";
import { SponsoredBy } from "@components/Marquee";
import SEO from "@components/SEO";

---

<Layout namespace="2025/boston">
  <SEO slot="head" img={1} />

  <LandingHero
    title="Nextflow Summit"
    content="Whether you're a bioinformatician, data scientist, developer, or leader, you'll leave the Nextflow Summit feeling inspired, equipped, and excited about the future of scalable, reproducible workflows. Join us to gain insights into the latest advancements in Nextflow."
    ctaText1="Register Now"
    ctaLink1="/register"
    ctaText2="Call for abstracts"
    ctaLink2="/call-for-abstracts"
  />

  <section class="pt-24 mb-24 container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <Box className="">
        <SubSection className="flex flex-col justify-between min-h-[350px]">
          <div>
            <div class="border-b border-b-nextflow w-full">
              <h5 class="h5 mb-4">Training</h5>
            </div>
            <div class="py-2 monospace border-b border-b-nextflow">
              May 13-14 • training
            </div>
          </div>
          <div>
            <h5 class="h5 mb-2">2 days / 50 people</h5>
            <p class="monospace">
              An in-person foundational training to supercharge your pipeline
              development with Nextflow and nf-core. <br /><br />Running in
              parallel to the hackathon.
            </p>
          </div>
        </SubSection>
      </Box>

      <Box className="">
        <SubSection className="flex flex-col justify-between min-h-[350px]">
          <div>
            <div class="border-b border-b-nextflow w-full">
              <h5 class="h5 mb-4">Hackathon</h5>
            </div>
            <div class="py-2 monospace border-b border-b-nextflow">
              May 13-14 • hackathon
            </div>
          </div>
          <div>
            <h5 class="h5 mb-2">2 days / 100 people</h5>
            <p class="monospace">
              An in-person hackathon to tackle real-world challenges, create
              innovative pipelines with Nextflow, and develop nf-core.<br /><br
              />
              Running in parallel to the training.
            </p>
          </div>
        </SubSection>
      </Box>
      <Box className="">
        <SubSection className="flex flex-col justify-between min-h-[350px]">
          <div>
            <div class="border-b border-b-nextflow w-full">
              <h5 class="h5 mb-4">Summit</h5>
            </div>
            <div class="py-2 monospace border-b border-b-nextflow">
              May 15-16 • talks, networking and more
            </div>
          </div>
          <div>
            <h5 class="h5 mb-2">1.5 days / 200+ people</h5>
            <p class="monospace">
              A showcase of the latest developments and innovations from the
              Nextflow world. Session themes include: Enabling Science, Big
              Nextflow, and Organizational impact.
            </p>
          </div>
        </SubSection>
      </Box>
    </div>
  </section>
  <section class="container relative z-10 mb-4 sm:mb-8 lg:mb-20">
    <KeyDates showTitle />
  </section>


</Layout>
