---
import Layout from "@layouts/Base.astro";
import GlassArea from "@components/GlassArea/index.astro";
import CallForAbstracts from "@modules/CallForAbstracts";
import CTASection from "@modules/CTASection";
import Contact from "@modules/Contact";
import PastEvents from "@modules/PastEvents";
import Button from "@components/Button";
import SEO from "@components/SEO";
---

<Layout namespace="2024/boston">
  <SEO title="Past Events" />
  <GlassArea className="pt-20 pb-6" style2>
    <section class="container island pb-10 md:py-20 text-center">
      <h1 class="h00 mb-8">Past Events</h1>
      <div class="blockquote">
        Past events have provided insights into Nexflow's origins, development,
        and its applications in various domains, highting its potential and
        impact on scientific research, data analysis, and workflow management.
      </div>
    </section>
    <PastEvents client:visible />
  </GlassArea>
  <CallForAbstracts client:load className="mb-20" />
  <CTASection />
  <Contact />
</Layout>
