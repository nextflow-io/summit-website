    barcelona="October 28-29"
    client:load
  />

  <FeatureBlocks
    client:load
    boxes={[
      {
        title: 'Conference 2025',
        subtitleLeft: 'March 15-16',
        subtitleRight: 'New York',
        imageAlt: 'Conference venue',
        bottomSubtitleLeft: 'Early bird pricing available',
        bottomSubtitleRight: 'Price: $299',
        href: '/register',
        externalLink: false,
      },
      {
        title: 'Workshop Series',
        subtitleLeft: 'April 5-7',
        subtitleRight: 'Online',

        imageAlt: 'Workshop',
        bottomSubtitleLeft: 'Limited spots available',
        bottomSubtitleRight: 'Price: Free',
        href: 'https://external-site.com',
        externalLink: true,
      },
    ]}
