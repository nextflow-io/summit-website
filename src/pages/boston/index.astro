---
import Layout from "@layouts/Base.astro";
import GlassArea from "@components/GlassArea/index.astro";
import CallForAbstracts from "@components/SectionCallForAbstracts";
import NextflowNumbers from "@components/SectionNextflowNumbers";
import Images from "@components/SectionImages/index.astro";
import title from "@images/title-summit-1a.svg";
import Button from "@components/Button";
import KeyInformation from "@components/SectionKeyInformation";
import KeyDates from "@components/KeyDates";
import SectionCTA from "@components/SectionCTA";
import SectionContact from "@components/SectionContact";
import SEO from "@components/SEO";
---

<Layout namespace="boston">
  <SEO slot="head" />
  <GlassArea className="pt-20 pb-6" style2>
    <CallForAbstracts client:load />
    <div class="mt-16 text-center container">
      <img src={title.src} class="mx-auto max-w-[300px] lg:max-w-none" />
      <div class="h00 mt-16 mb-4">MAY 21 - 24, 2024</div>
      <Button href="/boston/register" white wide>Pre-register</Button>
    </div>
    <KeyInformation className="pt-16" />
  </GlassArea>
  <div class="container relative z-10 mb-20">
    <KeyDates showTitle showImg />
  </div>
  <SectionCTA />
  <NextflowNumbers client:load className="py-20" />
  <Images />
  <SectionContact />
</Layout>
