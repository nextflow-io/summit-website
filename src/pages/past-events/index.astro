          <div class="imageBlend mt-6 mb-8 relative h-0 w-full overflow-hidden pb-[80%]">
            <img class="max-w-none w-full h-full absolute top-0 bottom-0 left-0 right-0 object-cover" src={e2017_nf.src} alt="person working on laptop during hackathon" />
          </div>
        </SubSection>
      </Box>
    </div>
  </section>
</Layout>
