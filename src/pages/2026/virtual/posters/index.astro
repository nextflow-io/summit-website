---
import Layout from "@layouts/Base.astro";
import SEO from "@components/SEO";
import PostersSection from "@modules/PostersSection";
import {getAllPostersVirtual} from "@data/posters";

const sortedMembers = getAllPostersVirtual[0].posters.sort((a, b) =>
  a.name.localeCompare(b.name)
);

---

<Layout namespace="2026/virtual">
  <SEO slot="head" title="Posters" img={1} />


   <section class="py-20 bg-black text-white">
      <div class="container-lg">
        <h1 class="h3">Posters</h1>
        <p>
          Check back soon to see this year's posters.
        </p>
      </div>
    </section>

