---
import Layout from '@layouts/Base.astro';
import LandingHero from '@components/LandingHero';
import KeyDates from '@components/KeyDates/index.astro';
import Box from '@components/Box';
import ArrowUpRight from '@icons/ArrowUpRight';
import FeatureBlocks from '@modules/FeatureBlocks';
import Faq from '@components/Faq';
import SEO from '@components/SEO';
import qa from './qa';
---

<Layout namespace="2026/boston">
  <SEO slot="head" title="Overview | Boston" img={1} />

  <LandingHero
    isBoston
    title="Nextflow Summit"
    content="No matter your role—bioinformatician, data scientist, developer, or industry leader—Nextflow Summit by Seqera is where you’ll connect, learn, and innovate. Leave inspired, equipped, and ready to drive the future of science and technology."
    when="May 13-16"
    where="Aloft Hotel, Boston"
    ctaText1="View the Recordings"
    ctaLink1="https://www.youtube.com/playlist?list=PLPZ8WHdZGxmWF9fpFcrUuHiozeUZoLb65"
    ctaExternal1
    namespace="2026/boston"
    pathname="/2026/boston"
    client:load
  />

  <FeatureBlocks
    boxes={[
      {
        title: 'Conference 2025',
        subtitleLeft: 'March 15-16',
        subtitleRight: 'New York',
        imageAlt: 'Conference venue',
        bottomSubtitleLeft: 'Early bird pricing available',
        bottomSubtitleRight: 'Price: $299',
        href: '/register',
        externalLink: false,
      },
      {
        title: 'Workshop Series',
        subtitleLeft: 'April 5-7',
        subtitleRight: 'Online',
  
        imageAlt: 'Workshop',
        bottomSubtitleLeft: 'Limited spots available',
        bottomSubtitleRight: 'Price: Free',
        href: 'https://external-site.com',
        externalLink: true,
      },
    ]}
  />

  <section class="pt-20 md:pt-40 mb-24 container">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <Box
        title="Training"
        subtitleLeft="May 13-14"
        subtitleRight="Training"
        headline="2 days / 50 people"
        bottomSubtitleLeft="Academic $120 • Corporate $300"
      />
    </div>
  </section>
  <!-- <section class="container relative z-10 mb-4 sm:mb-8 lg:mb-20">
    <KeyDates />
  </section> -->

  <!-- <Faq className="mt-20 md:mt-40 mb-20" client:load data={qa} /> -->
</Layout>
