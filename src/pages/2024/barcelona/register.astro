---
import Layout from "@layouts/Base.astro";
import { Image } from "astro:assets";
import img from "@photos/audience-2b.jpg";
import PastEvents from "@modules/PastEvents";
import Contact from "@modules/Contact";
import { SponsoredBy } from "@components/Marquee";
import SEO from "@components/SEO";
import TicketTailorWidget from "@components/TicketTailorWidget";
import Box from "@components/Box";
---

<Layout namespace="2024/barcelona">
  <SEO slot="head" title="Register" img={2} bcn />
  <section class="pb-6 pt-16 md:pt-20">
    <div class="container island text-center">
      <h2 class="h000 mb-2">
        <span class="h1">Attend</span><br />Nextflow Summit 2024
      </h2>
      <b class="font-bold text-wave text-xl">
        Barcelona <span class="opacity-40">|</span> Oct 28 - Nov 1
      </b>
    </div>
    <section class="container pt-6 md:pt-20 pb-6">
      <div class="flex flex-wrap -m-2 sm:-m-4">
        <div class="w-full md:w-1/2 p-2 sm:p-4">
          <div class="relative w-full h-full rounded-lg overflow-hidden">
            <Image
              src={img}
              alt="Nextflow training"
              class="object-cover h-full absolute inset-0"
            />
          </div>
        </div>
        <div class="w-full md:w-1/2 p-2 sm:p-4">
          <Box className="!border-nextflow-600/40 text-left">
            <p class="blockquote">Discover our ticket prices, discount dates, and exclusive perks below.</p>

            <div class="bg-nextflow-600/20 p-3 rounded mt-6 -mx-2">
              <p>Register early to be part of <strong>The First 100 Club</strong> and get exclusive swag at the Nextflow Summit!</p>
            </div>

            <p class="mt-6">Your ticket includes:</p>
            <ul class="list pt-2">
              <li>Access to in-person content and programming</li>
              <li>Meals, social events, and shuttle service to social event venues</li>
              <li>Network and connect with other attendees and sponsors.</li>
            </ul>

            <p class="mt-4">For more details on hotels and the summit venue, please see the <a href="/2024/barcelona/travel/">travel page</a>.</p>
          </Box>
        </div>
      </div>
      <div class="md:flex mt-6 text-center">
        <div class="w-full md:w-1/3 md:pr-3 my-2">
          <Box className="!border-nextflow-600/40">
            <p class="h3 mb-4">Early bird: 30% off</p>
            <p>May 6- June 21</p>
          </Box>
        </div>
        <div class="w-full md:w-1/3 md:px-3 my-2">
          <Box className="!border-nextflow-600/40">
            <p class="h3 mb-4">Early bird: 20% off</p>
            <p>June 22 - August 30</p>
          </Box>
        </div>
        <div class="w-full md:w-1/3 md:pl-3 my-2">
          <Box className="!border-nextflow-600/40">
            <p class="h3 mb-4">Standard pricing</p>
            <p>September 1 - October 11</p>
          </Box>
        </div>
      </div>
    </section>
    <div class="container text-center">
      <Box className="!border-nextflow-600/40 mt-6 mx-auto w-full lg:w-[840px]">
        <TicketTailorWidget eventID={4145429} widgetID="54e2" client:load />
      </Box>
    </div>
  </section>
  <PastEvents title="Past events" client:visible />
  <Contact className="py-8" />
  <SponsoredBy client:load />
</Layout>
