---
import Layout from "@layouts/Base.astro";
import SEO from "@components/SEO";
import Gallery from "@components/Gallery/index.astro";

const photos = await Astro.glob("./photos/*");
---

<Layout namespace="2024/boston" altBG>
  <SEO slot="head" title="Gallery" img={1} />
  <section class="container text-center pt-10 md:pt-16">
    <Gallery
      title="Boston SUMMIT 2024"
      images={photos}
      ctaURL="https://photos.app.goo.gl/CXt5w4s3aTiX7nY6A"
    />
  </section>
</Layout>
