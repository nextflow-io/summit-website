---
import Layout from "@layouts/Base.astro";
import CallForAbstracts from "@modules/CallForAbstracts";
import NextflowNumbers from "@modules/NextflowNumbers";
import ImageSection from "@modules/ImageSection";
import title from "@images/title-summit-1a.svg";
import Button from "@components/Button";
import KeyInformation from "@modules/KeyInformation";
import KeyDates from "@components/KeyDates";
import YouTubeVideo from "@components/YouTubeVideo";
import CTASection from "@modules/CTASection";
import SectionContact from "@modules/Contact";
import SponsoredBy from "@modules/SponsoredBy";
import SEO from "@components/SEO";
---

<Layout namespace="2024/boston">
  <SEO slot="head" img={1} />
  <section class="pb-6 pt-16 md:pt-20">
    <CallForAbstracts client:load className="pb-10 md:pb-20" />
    <div class="text-center container">
      <img src={title.src} class="mx-auto max-w-[300px] lg:max-w-none" />
      <div class="h00 mt-16 mb-8">MAY 21 - 24, 2024</div>
      <Button href="/2024/boston/register" cta2 large>Register</Button>
    </div>
    <KeyInformation className="pt-16" />
  </section>
  <section class="container relative z-10 mb-4 sm:mb-8 lg:mb-20">
    <KeyDates showTitle showImg />
  </section>
  <section class="container mb-8 lg:mb-20">
    <YouTubeVideo id="JvjoZ9dPjq8" />
  </section>
  <CTASection />
  <NextflowNumbers client:load className="py-20" />
  <ImageSection alt1 />
  <SectionContact />
  <SponsoredBy client:load />
</Layout>
