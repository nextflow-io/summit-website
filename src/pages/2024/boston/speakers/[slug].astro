---
import Layout from "@layouts/Base.astro";
import SessionCard from "@components/SessionCard";
import ContentBox from "@components/ContentBox/index.astro";
import SEO from "@components/SEO";
import speakers from "@data/speakers";

export function getStaticPaths() {
  return speakers.map((speaker) => ({
    params: { slug: speaker.slug },
  }));
}

const speaker = speakers.find((speaker) => speaker.slug === Astro.params.slug);
---

<Layout namespace="2024/boston" altBG>
  <SEO slot="head" title={speaker.fullName} img={1} />
  <section class="pb-6 pt-16 md:pt-20">
    <div class="container island text-center pb-10 md:pb-20">
      <ContentBox
        backLink={{ label: "Back to speakers", url: "/2024/boston/speakers" }}
      >
        <div class="flex flex-col sm:flex-row items-center mb-8">
          <div class="w-full sm:w-40">
            <img
              src={speaker.profilePicture}
              alt={speaker.fullName}
              class="rounded-full w-full h-full object-cover max-w-[200px] mx-auto"
            />
          </div>
          <div class="flex-auto text-center sm:text-left pt-6 sm:pt-0 sm:pl-6">
            <h1 class="text-5xl font-bold mb-4 font-display">
              {speaker.fullName}
            </h1>
            <div class="font-medium text-lg text-nextflow-400">
              {speaker.tagLine}
            </div>
          </div>
        </div>
        <div class="text-left text-brand-300 font-light">{speaker.bio}</div>
        <h2 class="h2 mt-16 text-left mb-6">Sessions</h2>
        {speaker.sessions.map((session) => <SessionCard session={session} />)}
      </ContentBox>
    </div>
  </section>
</Layout>
