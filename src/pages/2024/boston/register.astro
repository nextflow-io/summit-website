---
import HubspotForm from "@components/HubspotForm";
import Layout from "@layouts/Base.astro";
import { Image } from "astro:assets";
import audience1 from "@images/photo-audience-1a.jpg";
import CallForAbstracts from "@modules/CallForAbstracts";
import PastEvents from "@modules/PastEvents";
import Contact from "@modules/Contact";
import SEO from "@components/SEO";
---

<Layout namespace="2024/boston">
  <SEO slot="head" title="Pre-register" img={1} />
  <section class="pb-6 pt-16 md:pt-20">
    <CallForAbstracts client:load className="pb-10 md:pb-16" />
    <div class="container island">
      <h2 class="h000 mb-2">Interested in attending Nextflow Summit 2024?</h2>
      <div class="blockquote mb-4">
        <p class="mt-8 mb-8">
          Sign up for updates to be the first to know when tickets go on sale!
        </p>
        <p class="mb-4">
          <b class="font-bold text-fusion-600">
            Boston <span class="opacity-40">|</span> May 21-24
          </b>
        </p>
        <b class="font-bold text-wave">
          Barcelona <span class="opacity-40">|</span> Coming soon
        </b>
      </div>
    </div>
    <div class="container smaller mt-16">
      <div class="flex flex-wrap -m-2 sm:-m-4">
        <div class="w-full sm:w-1/3 md:w-1/2 p-2 sm:p-4 hidden sm:block">
          <Image
            src={audience1}
            alt="Nextflow SUMMIT Audience"
            class="object-cover h-[100px] sm:h-full rounded-lg"
          />
        </div>
        <div class="w-full sm:w-2/3 md:w-1/2 p-2 sm:p-4">
          <HubspotForm
            className="form-style-1"
            formID="e2a41df7-342e-4667-88f1-bb57656261a8"
            client:only="react"
          />
        </div>
      </div>
    </div>
  </section>
  <PastEvents title="Past events" client:visible />
  <Contact className="py-8" />
</Layout>
